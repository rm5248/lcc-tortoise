&spi1 {
	pinctrl-0 = <&spi1_sck_pb3
		     &spi1_miso_pb4 &spi1_mosi_pb5>;
	pinctrl-names = "default";
	status = "okay";

	cs-gpios = <&gpiob 7 GPIO_ACTIVE_LOW>;

	gpio_expander: mcp23s08@0 {
		compatible = "microchip,mcp23s08";
		spi-max-frequency = <1000000>;
		reg = <0x0>;
		gpio-controller;
		#gpio-cells = <2>;
		ngpios = <8>;
		reset-gpios = <&gpioa 1 GPIO_ACTIVE_LOW>;
		int-gpios = <&gpioa 15 GPIO_ACTIVE_LOW>;
	};
};

&fdcan2 {
	clocks = <&rcc STM32_CLOCK_BUS_APB1 0x00001000>,
		 <&rcc STM32_SRC_PLL_Q FDCAN_SEL(1)>;
	pinctrl-0 = <&fdcan2_rx_pb0 &fdcan2_tx_pb1>;
	pinctrl-names = "default";
	status = "okay";
};

&flash0 {
	partitions {
		compatible = "fixed-partitions";
		#address-cells = <1>;
		#size-cells = <1>;

		/* We have 512k of flash, so let's not worry too much about space */
		boot_partition: partition@0 {
			label = "bootloader";
			reg = <0x00000000 DT_SIZE_K(48)>;
			read-only;
		};
		slot0_partition: partition@C000 {
			label = "image-0";
			reg = <0x0000C000 DT_SIZE_K(192)>;
		};
		slot1_partition: partition@3C000 {
			label = "image-1";
			reg = <0x0003C000 DT_SIZE_K(192)>;
		};

		/*
		 * 2k for LCC ID data
		 */
		lcc_partition: partition@7F000 {
			label = "lcc-partition";
			reg = <0x0007F000 DT_SIZE_K(2)>;
		};
	};
};

/ {
	tortoise0: tort0 {
		compatible = "tortoise-output";
		gpios = <&gpioa 2 GPIO_ACTIVE_HIGH>,
		        <&gpioa 10 GPIO_ACTIVE_HIGH>;
		status = "okay";
        };
	tortoise1: tort1 {
		compatible = "tortoise-output";
		gpios = <&gpioa 3 GPIO_ACTIVE_HIGH>,
		        <&gpioa 11 GPIO_ACTIVE_HIGH>;
		status = "okay";
        };
};

&timers1 {
	st,prescaler = <10000>;
	status = "okay";

	pwm1: pwm {
		status = "okay";
		pinctrl-0 = <&tim1_ch1_pa8 &tim1_ch2_pa9>;
		pinctrl-names = "default";
	};
};

&timers2 {
	st,prescaler = <10000>;
	status = "okay";

	pwm2: pwm {
		status = "okay";
		pinctrl-0 = <&tim2_ch1_pa5>;
		pinctrl-names = "default";
	};
};

