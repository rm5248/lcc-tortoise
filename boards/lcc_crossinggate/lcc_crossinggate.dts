/dts-v1/;
#include <st/g0/stm32g0b1Xe.dtsi>
#include <st/g0/stm32g0b1k(b-c-e)tx-pinctrl.dtsi>
#include <zephyr/dt-bindings/input/input-event-codes.h>
#include <zephyr/dt-bindings/pinctrl/stm32-pinctrl.h>
#include <zephyr/dt-bindings/pinctrl/stm32-pinctrl-common.h>

/* CPU: STM32G0B1KE
 * FLASH: 512k
 * SRAM: 128(parity-protected)/144(not parity-protected)
 */

/ {
	model = "Snowball Creek LCC Crossing Gate";
	compatible = "st,stm32g0b1ke-lcc-crossing-gate";

	chosen {
		zephyr,console = &usart3;
		zephyr,shell-uart = &usart3;
		zephyr,uart-mcumgr = &usart3;
		zephyr,sram = &sram0;
		zephyr,flash = &flash0;
		zephyr,code-partition = &slot0_partition;
		zephyr,canbus = &fdcan2;
	};

	aliases {
	};

	leds: leds {
		compatible = "gpio-leds";
		gold_led: led_1 {
			gpios = <&gpioa 6 GPIO_ACTIVE_HIGH>;
			label = "LED1";
		};
		blue_led: led_2 {
			gpios = <&gpioa 4 GPIO_ACTIVE_HIGH>;
			label = "LED2";
		};
		green_led: led_3 {
			gpios = <&gpioc 6 GPIO_ACTIVE_HIGH>;
		};

		sound_enable: sound_en {
			gpios = <&gpioa 7 GPIO_ACTIVE_HIGH>;
			label = "sound_enable";
		};
		sound_power: sound_pwr {
			gpios = <&gpioa 12 GPIO_ACTIVE_HIGH>;
			label = "sound_power";
		};

	};

	pwmleds {
		compatible = "pwm-leds";
		status = "okay";

		led_out1: led_4 {
			pwms = <&pwm1 1 PWM_MSEC(20) PWM_POLARITY_NORMAL>;
		};
		led_out2: led_5 {
			pwms = <&pwm1 2 PWM_MSEC(20) PWM_POLARITY_NORMAL>;
		};
	};

	servo: servo {
		compatible = "pwm-servo";
		pwms = <&pwm2 1 PWM_MSEC(20) PWM_POLARITY_NORMAL>;
		min-pulse = <PWM_USEC(700)>;
		max-pulse = <PWM_USEC(2500)>;
	};

	gpio_keys {
		compatible = "gpio-keys";
		blue_switch: button_blue {
			label = "blue_switch";
			gpios = <&gpioa 13 (GPIO_ACTIVE_LOW)>;
		};
		gold_switch: button_gold {
			label = "gold_switch";
			gpios = <&gpioa 14 (GPIO_ACTIVE_HIGH)>;
		};

	};

	inputs {
		compatible = "gpio-keys";
		debounce-interval-ms = <0>;

		in0: input0 {
			label = "in0";
			gpios = <&gpio_expander 0 GPIO_ACTIVE_LOW>;
		};
		in1: input1 {
			label = "in1";
			gpios = <&gpio_expander 1 GPIO_ACTIVE_LOW>;
		};
		in2: input2 {
			label = "in2";
			gpios = <&gpio_expander 2 GPIO_ACTIVE_LOW>;
		};
		in3: input3 {
			label = "in3";
			gpios = <&gpio_expander 3 GPIO_ACTIVE_LOW>;
		};
		in4: input4 {
			label = "in4";
			gpios = <&gpio_expander 4 GPIO_ACTIVE_LOW>;
		};
		in5: input5 {
			label = "in5";
			gpios = <&gpio_expander 5 GPIO_ACTIVE_LOW>;
		};
		in6: input6 {
			label = "in6";
			gpios = <&gpio_expander 6 GPIO_ACTIVE_LOW>;
		};
		in7: input7 {
			label = "in7";
			gpios = <&gpio_expander 7 GPIO_ACTIVE_LOW>;
		};
	};
};

