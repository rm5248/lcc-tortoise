/ {
	model = "Snowball Creek LCC Tortoise";
	compatible = "st,stm32g0b1cb-tortoise";

	chosen {
		zephyr,console = &usart2;
		zephyr,shell-uart = &usart2;
		zephyr,uart-mcumgr = &usart2;
		zephyr,sram = &sram0;
		zephyr,flash = &flash0;
		zephyr,code-partition = &slot0_partition;
		zephyr,canbus = &fdcan1;
	};

	leds: leds {
		compatible = "gpio-leds";
		green_led: led_6 {
			gpios = <&gpioc 6 GPIO_ACTIVE_HIGH>;
			label = "Green LED";
		};
		blue_led: led_10 {
			gpios = <&gpioa 10 GPIO_ACTIVE_HIGH>;
			label = "Blue LED";
		};
		gold_led: led_11 {
			gpios = <&gpioa 11 GPIO_ACTIVE_HIGH>;
			label = "Gold LED";
		};
	};

	gpio_keys {
		compatible = "gpio-keys";
		blue_switch: button_blue {
			label = "blue_switch";
			gpios = <&gpiod 2 (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>;
		};
		gold_switch: button_gold {
			label = "gold_switch";
			gpios = <&gpiod 3 (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>;
		};
	};

	aliases {
		greenled = &green_led;
		blueled = &blue_led;
		goldled = &gold_led;
		blueswitch = &blue_switch;
		//sw0 = &user_button;
		//watchdog0 = &iwdg;
		//die-temp0 = &die_temp;
		//volt-sensor0 = &vref;
		//volt-sensor1 = &vbat;
	};
};

